@model G4_SC701_CasoPractico1.Rutas.Models.Boleto

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

    <h4>Boleto</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="All" class="alert alert-danger"></div>

                <div class="form-group">
                    <label>Ruta:</label>
                    <select asp-for="IdRuta" class="form-control" asp-items="ViewBag.IdRuta" id="rutaSelect"></select>
                    <span asp-validation-for="IdRuta" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Capacidad de Pasajeros:</label>
                    <input type="text" id="capacidadRuta" class="form-control" readonly />
                </div>

                <div class="form-group">
                    <label>Usuario:</label>
                    <label asp-for="IdUsuario" class="control-label"></label>
                    <select asp-for="IdUsuario" class="form-control" asp-items="ViewBag.IdUsuario"></select>
                    <span asp-validation-for="IdUsuario" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <script>
        document.getElementById("rutaSelect").addEventListener("change", function () {
            var rutaId = this.value;
            if (rutaId) {
                fetch(`/Boleto/GetCapacidadRuta/${rutaId}`)
                    .then(response => response.json())
                    .then(data => {
                        document.getElementById("capacidadRuta").value = data.capacidad;
                    });
            } else {
                document.getElementById("capacidadRuta").value = "";
            }
        });
    </script>

</body>
</html>
