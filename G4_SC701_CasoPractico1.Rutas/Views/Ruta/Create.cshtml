@model G4_SC701_CasoPractico1.Rutas.Models.Ruta

@{
    ViewData["Title"] = "Crear Ruta";
}

<h2>Crear Ruta</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="NombreRuta" class="control-label"></label>
        <input asp-for="NombreRuta" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Estado" class="control-label"></label>
        <input asp-for="Estado" type="checkbox" />
    </div>

    <div class="form-group">
        <label asp-for="IdUsuarioRegistro" class="control-label"></label>
        <select asp-for="IdUsuarioRegistro" class="form-control" asp-items="ViewBag.IdUsuarioRegistro"></select>
    </div>

    <div class="form-group">
        <label class="control-label">Vehículo</label>
        <select asp-for="IdVehiculo" class="form-control" asp-items="ViewBag.IdVehiculo"></select>
    </div>



    <button type="submit" class="btn btn-primary">Crear</button>
</form>

<a asp-action="Index">Volver a la lista</a>

<!-- Script para actualizar los datos del vehículo al seleccionarlo -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $("#IdVehiculo").change(function () {
            var vehiculoId = $(this).val();

            // Llamamos a la API o controlador para obtener los datos del vehículo
            $.get("/Ruta/GetVehiculoInfo/" + vehiculoId, function (data) {
                $("#vehiculoModelo").text(data.modelo);
                $("#vehiculoCapacidad").text(data.capacidadPasajeros);
            });
        });
    });
</script>
